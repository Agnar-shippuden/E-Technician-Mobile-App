<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerActivities.AcceptOrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:paddingStart="@dimen/_30sdp"
        app:title="Confirm Accept Order"
        app:titleTextColor="@color/primary_text"
        android:backgroundTint="@color/card_background"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/buyerHome"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        android:tint="@color/secondary_label"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/buenard"
            android:text="Description"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:id="@+id/orderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe here"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:padding="@dimen/_3sdp"
            android:textColorHint="@color/secondary_label"
            android:background="@drawable/description"
            android:layout_margin="@dimen/_5sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/buenard"
            android:text="Complete Address"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:id="@+id/orderAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="@dimen/_3sdp"
            android:textColorHint="@color/secondary_label"
            android:background="@drawable/description"
            android:layout_margin="@dimen/_5sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                />
            <TextView
                android:id="@+id/orderContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000 0000000"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                />
            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="buyer"
                android:layout_marginStart="@dimen/_70sdp"
                android:textSize="@dimen/_12ssp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/serviceConfirmOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Order"
            android:layout_margin="@dimen/_25sdp"
            android:enabled="true"
            android:textSize="@dimen/_12ssp"
            android:textAllCaps="false"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/serviceProviderChatIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_chat"
        android:tint="@color/maincolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_15sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>